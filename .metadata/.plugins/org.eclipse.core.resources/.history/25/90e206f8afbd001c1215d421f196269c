#ifndef FUNCIONES_H_
#define FUNCIONES_H_
/**
 * @brief Le pide al ususario que ingrese una opcion del uno al seis y retorna la misma.
 *
 * @return retorna la opcion elegida por el usuario
 */
int menu();

/**
 * @brief
 *
 * @param texto
 * @param minmimo
 * @param maximo
 * @return
 */
int pedirYvalidar(char texto[],float minmimo, float maximo);

/**
 * @brief
 *
 * @param num1
 * @param num2
 * @return
 */
float calcularDiferencia(float num1, float num2);

/**
 * @brief
 *
 * @param operador1
 * @param operador2
 * @return
 */
float multiplicar(float operador1, float operador2);

/**
 * @brief
 *
 * @param operador1
 * @param operador2
 * @return
 */
float divir(float operador1, float operador2);
/**
 * @brief
 *
 * @param debito
 * @param credito
 * @param btc
 * @param precioXkm
 */
void mostrarCalculos (float debito, float credito, float btc, float precioXkm);

/**
 * @brief es una funcion exclusivamente para la carga forzada de datos, no pide ni retorna nada
 */
void cargaForzada();

#endif /* FUNCIONES_H_ */
