#include <stdio.h>
#include <stdlib.h>


float calcularDiferencia(float num1, float num2)
{
	float resultado;
	if(num1>num2)
	{
		resultado=num1-num2;
	}else
	{
		resultado=num2-num1;
	}
	return resultado;
}

float multiplicar(float operador1, float operador2)
{
	float resultado;
	resultado=operador1*operador2;

	return resultado;
}

float divir(float operador1, float operador2)
{
	float resultado;
	resultado=operador1/operador2;

	return resultado;
}

void mostrarCalculos (float debito, float credito, float btc, float precioXkm )
{
	printf(	"\na)Precio con tarjeta de debito: $%2.f"
			"\nb)Precio con tarjeta de credto: $%2.f"
			"\nc)Precio pagando con Bitcoin: $%2.f"
			"\nd)Mostrar precio Unitario: $%2.f",debito,credito,btc,precioXkm);
}


int menu()
{
	int opcion;
	printf("\nPor Favor seleccione una opcion del 1 al 6 ");
	printf("\n1. Ingresar Kilometros \n"
		   "2. Ingresar Precio de Vuelos\n"
		   "3. Calcular todos los costos\n"
		   "4. Informar Resultados\n"
		   "5. Carga forzada de datos \n"
		   "6. Salir\n");
	scanf("%d",&opcion);

	return opcion;
}
int ingresoDePrecios(float precio)
{
	scanf("%f",&precio);
	return precio;
}

